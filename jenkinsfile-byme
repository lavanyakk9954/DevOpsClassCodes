pipeline{
    agent any
    tools{
        maven "maven"
    }
    stages{
        stage("Fetch code from github repo"){
            steps{
                git url: "https://github.com/lavanyakk9954/DevOpsClassCodes.git"
                echo 'Run Success'
            }
        }
        stage('parallel stages'){
            parallel{
        stage("This is to compile the code"){
agent{label 'slave1'}
            steps{
                sh 'mvn compile'
                recordIssues(tools: [pmdParser()])
                echo 'Run Success'
            }
        }
        stage("This is for testing"){
agent{label 'slave1'}
            steps{
                sh 'mvn test'
                echo 'Run Success'
            }
        }
            }
        }
      
    stage("This is for QA tetsing"){
agent{label 'slave2'}
            steps{
                catchError(buildResult: 'SUCCESS', stageResult: 'FAILURE'){
                sh 'mvn pmd:pmd'
                echo 'Run Success'
                }
            }
        }
    
    
    stage("This is to set the package of a code"){
agent{label 'slave2'}
            steps{
                sh 'mvn package'
                echo 'Run Success'
            }
        }
    }
}
